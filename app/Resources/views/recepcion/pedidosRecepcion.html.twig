{% extends 'baserecepcion.html.twig' %}
{% block style_body %}
  <body>
{% endblock %}

{% block body %}

  <div class="container-fluid">
    <h1 class="alert-info">Pedidos</h1>
    <div class="table-responsive">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Fecha</th>
            <th>Cliente</th>
            <th>Socia</th>
          </tr>
        </thead>
        <tbody>
        {% for pedido in pedidos %}
          <tr>
            <td>{{pedido.Fecha | date('d-m-Y')}}</td>
            <td>{{pedido.Usuariosusuarios.UsNombre}}</td>
            <td>
              {% if pedido.Sociassocias == null %}
                <a class="btn btn-danger" href="{{path('detallePedido',{id:pedido.IdentregaDetalle})}}">Asigne socia</a>
              {% endif %}
              {% if pedido.Sociassocias != null %}
                {{pedido.Sociassocias.SocDatos}}
              {% endif %}
              
              
            </td>
            <td>
              {% if pedido.EstadoEntrega == 1 %}
                <a class="btn btn-secondary" href="{{path('detallePedido',{id:pedido.IdentregaDetalle})}}">Detalles</a>
              {% endif %}
              
            </td>
          </tr>
        {% endfor %}
          
        </tbody>
      </table>
    </div>

  </div>
	
    
{% endblock %}